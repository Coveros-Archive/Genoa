{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "clusterRole": {
      "type": "string"
    },
    "config": {
      "type": "object",
      "properties": {
        "notification": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "enum": [true, false]
            },
            "provider": {
              "type": "string",
              "enum": ["slack"]
            },
            "defaultChannelID": {
              "type": "string"
            },
            "token": {
              "type": "string"
            }
          },
          "dependencies": {
            "enabled":  ["provider", "defaultChannelID", "token"]
          }
        },
        "github": {
          "type": "object",
          "properties": {
            "accessToken": {
              "type": "string"
            },
            "deployDir": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean",
              "enum": [true, false]
            },
            "webhookSecret": {
              "type": "string"
            },
            "selfHostedUrl": {
              "type": "string"
            }
          },
          "dependencies": {
            "enabled": ["accessToken", "webhookSecret", "deployDir"]
          }
        },
        "gitlab": {
          "type": "object",
          "properties": {
            "accessToken": {
              "type": "string"
            },
            "deployDir": {
              "type": "string"
            },
            "enabled": {
              "type": "boolean",
              "enum": [true, false]
            },
            "webhookSecret": {
              "type": "string"
            },
            "selfHostedUrl": {
              "type": "string"
            }
          },
          "dependencies": {
            "enabled": ["accessToken", "webhookSecret", "deployDir"]
          }
        },
        "helmRepos": {
          "type": "string"
        }
      }
    },
    "deployments": {
      "type": "object",
      "properties": {
        "genoa": {
          "type": "object",
          "properties": {
            "annotations": {
              "type": "object"
            },
            "envVars": {
              "type": "array"
            },
            "image": {
              "type": "object",
              "properties": {
                "pullPolicy": {
                  "type": "string"
                },
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                }
              }
            },
            "imagePullSecrets": {
              "type": "array"
            },
            "initContainers": {
              "type": "array"
            },
            "labels": {
              "type": "object"
            },
            "nodeSelector": {
              "type": "object"
            },
            "podAnnotations": {
              "type": "object"
            },
            "podLabels": {
              "type": "object"
            },
            "replicaCount": {
              "type": "integer"
            },
            "resources": {
              "type": "object"
            },
            "volumeMounts": {
              "type": "array"
            },
            "volumes": {
              "type": "array"
            }
          }
        },
        "gitWebhook": {
          "type": "object",
          "properties": {
            "annotations": {
              "type": "object"
            },
            "envVars": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "value": {
                    "type": "string"
                  }
                }
              }
            },
            "image": {
              "type": "object",
              "properties": {
                "pullPolicy": {
                  "type": "string"
                },
                "repository": {
                  "type": "string"
                },
                "tag": {
                  "type": "string"
                }
              }
            },
            "imagePullSecrets": {
              "type": "array"
            },
            "initContainers": {
              "type": "array"
            },
            "labels": {
              "type": "object"
            },
            "livenessProbe": {
              "type": "object",
              "properties": {
                "failureThreshold": {
                  "type": "integer"
                },
                "httpGet": {
                  "type": "object",
                  "properties": {
                    "path": {
                      "type": "string"
                    },
                    "port": {
                      "type": "integer"
                    }
                  }
                },
                "initialDelaySeconds": {
                  "type": "integer"
                },
                "periodSeconds": {
                  "type": "integer"
                },
                "successThreshold": {
                  "type": "integer"
                },
                "timeoutSeconds": {
                  "type": "integer"
                }
              }
            },
            "nodeSelector": {
              "type": "object"
            },
            "podAnnotations": {
              "type": "object"
            },
            "podLabels": {
              "type": "object"
            },
            "replicaCount": {
              "type": "integer"
            },
            "resources": {
              "type": "object"
            },
            "volumeMounts": {
              "type": "array"
            },
            "volumes": {
              "type": "array"
            }
          }
        }
      }
    },
    "extraConfigMaps": {
      "type": "array"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "ingress": {
      "type": "object",
      "properties": {
        "annotations": {
          "type": "object"
        },
        "enabled": {
          "type": "boolean",
          "enum": [true, false]
        },
        "host": {
          "type": "string"
        },
        "labels": {
          "type": "object"
        },
        "tls": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "hosts": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "secretName": {
                "type": "string"
              }
            }
          }
        }
      },
      "dependencies": {
        "enabled": ["hosts"]
      }
    },
    "nameOverride": {
      "type": "string"
    }
  },
  "required": [
    "clusterRole"
  ]
}